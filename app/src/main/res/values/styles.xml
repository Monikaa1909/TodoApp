<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextFieldStyleTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_field_size</item>
        <item name="android:padding">@dimen/text_field_padding</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:textColor">@color/dark_greyblue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_field_size</item>
        <item name="android:padding">@dimen/text_field_padding</item>
    </style>

    <style name="TextDetailsFieldStyle">
        <item name="android:textColor">@color/dark_greyblue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/light_greyblue</item>
        <item name="android:textSize">@dimen/text_field_size</item>
        <item name="android:padding">@dimen/text_field_padding</item>
    </style>
</resources>